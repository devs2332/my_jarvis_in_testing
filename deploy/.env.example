# ── Enterprise Jarvis AI Platform ─ Environment Configuration ──
# Copy this file to .env and fill in your values.

# ── App ──────────────────────────────────────────────────
APP_NAME=Enterprise Jarvis AI
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ── Database (PostgreSQL) ────────────────────────────────
DATABASE_URL=postgresql+asyncpg://jarvis:jarvis_secret@postgres:5432/jarvis_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ── Redis ────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600

# ── JWT Authentication ───────────────────────────────────
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── OpenAI API ───────────────────────────────────────────
OPENAI_API_KEY=sk-your-openai-api-key-here
MODEL_FREE=gpt-4o-mini
MODEL_PRO=gpt-4o
MODEL_ENTERPRISE=gpt-4o
MODEL_FALLBACK=gpt-4o-mini

# ── Stripe Billing ───────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_PRO=price_pro_id_here
STRIPE_PRICE_ENTERPRISE=price_enterprise_id_here

# ── Rate Limiting (requests per minute) ──────────────────
RATE_LIMIT_FREE=20
RATE_LIMIT_PRO=60
RATE_LIMIT_ENTERPRISE=200

# ── Token Limits (per billing cycle) ─────────────────────
TOKEN_LIMIT_FREE=100000
TOKEN_LIMIT_PRO=1000000
TOKEN_LIMIT_ENTERPRISE=10000000

# ── Vector DB ────────────────────────────────────────────
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ── Logging ──────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FORMAT=json
